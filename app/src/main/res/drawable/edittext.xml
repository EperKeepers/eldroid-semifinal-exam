<?xml version="1.0" encoding="utf-8"?>
<!-- neumorphic_edittext.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F7E2AA" /> <!-- Your desired background color -->
            <corners android:radius="8dp" /> <!-- Adjust corner radius as needed -->
        </shape>
    </item>

    <!-- Outer Shadow -->
    <item android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#D6D6D6" /> <!-- Outer shadow color -->
            <corners android:radius="8dp" /> <!-- Adjust corner radius as needed -->
        </shape>
    </item>

    <!-- Inner Shadow -->
    <item android:left="2dp" android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Inner shadow color -->
            <corners android:radius="8dp" /> <!-- Adjust corner radius as needed -->
        </shape>
    </item>

</layer-list>
